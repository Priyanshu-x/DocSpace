{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/server/index.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/client/assets/$1"
        },
        {
            "source": "/logo.png",
            "destination": "/client/logo.png"
        },
        {
            "source": "/vite.svg",
            "destination": "/client/vite.svg"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ]
}